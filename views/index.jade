extends layout

append content
  .row-fluid
    .span12
      form.form-horizontal(action=(prefix + '/'), method='post', enctype='multipart/form-data')
        .control-group
          label.control-label(for='name') Name
          .controls
            input#name(name='name', type='text', value='Anonymous', required)
        .control-group
          label.control-label(for='subject') Subject
          .controls
            input#subject(name='subject', type='text')
        .control-group
          label.control-label(for='comment') Comment
          .controls
            textarea#comment(name='comment', cols='30', rows='3', required)
        .control-group
          label.control-label(for='file') File
          .controls
            input#file(name='file', type='file', required)
        .form-actions
          button.btn.btn-primary(type='submit')
            i.icon-share
            |  Post
  .row-fluid
    .span12
      if posts && posts.length
        each post in posts
              include partials/post

  .row-fluid
    .span12
      .pagination.pagination-centered
        ul
          li(class=((page == 1) ? 'disabled' : null))
              a(href=(prefix + '/page/' + (page - 1))) Prev
          - for (var p = 1; p <= 5; ++p)
            li(class=((page == p) ? 'active' : null))
              a(href=(prefix + '/page/' + p))= p
          li
            a(href=(prefix + '/page/' + (page + 1))) Next
